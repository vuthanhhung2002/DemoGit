@model IEnumerable<ThucTapChuyenMonLTW.Models.TblQuocGium>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhSachQuocGia";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h1>DanhSachQuocGia</h1>

<p>
    <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ThemQuocGia">Create New</a>
</p>
<p>
    @TempData["Message"]
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên quốc gia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenQuocGia)
            </td>
            <td>
                <a asp-action="SuaQuocGia" asp-route-maqg="@item.IdQuocgia">Edit</a> |
                    <a asp-action="XoaQuocGia" asp-route-maqg="@item.IdQuocgia">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
