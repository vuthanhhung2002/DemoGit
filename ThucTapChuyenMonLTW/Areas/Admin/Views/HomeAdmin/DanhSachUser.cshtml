@model IEnumerable<ThucTapChuyenMonLTW.Models.TblUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhSachUser";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h1>DanhSachUser</h1>
<div class="col-lg-4 col-6 text-left">
    @using (Html.BeginForm("TimKiemUser", "HomeAdmin"))
    {
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text bg-transparent text-primary">
                    <i class="fa fa-search"></i>
                </span>
            </div>
            <input type="text" name="strSearch" class="form-control" placeholder="Tìm người dùng">
        </div>
    }
</div>
<p>
    <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ThemUser">Create New</a>
</p>
<p>
    @TempData["Message"]
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Họ tên
            </th>
            <th>
               Địa chỉ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pass)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hoten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dchi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sodt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pass)
            </td>
       
            <td>
                <a asp-action="SuaUser" asp-route-mauser="@item.IdUser">Edit</a> |
                    <a asp-action="XoaUser" asp-route-mauser="@item.IdUser">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
